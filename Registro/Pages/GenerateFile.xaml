<Page x:Class="Registro.Pages.GenerateFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GenerateFile">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Generar archivo" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Start Date:" Margin="0,0,0,5"/>
            <DatePicker x:Name="StartDatePicker" Margin="0,0,0,20"/>

            <TextBlock Text="End Date:" Margin="0,0,0,5"/>
            <DatePicker x:Name="EndDatePicker" Margin="0,0,0,20"/>

            <Button Content="Generar" Margin="0,20,0,10" Click="Btn_Generate"/>
            <Button Content="Volver al menu principal" Click="Btn_GoBack"/>
        </StackPanel>
    </Grid>
</Page>
