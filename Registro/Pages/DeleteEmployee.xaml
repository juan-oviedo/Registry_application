<Page x:Class="Registro.Pages.DeleteEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteEmployee">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Eliminar Empleado" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Empleados:"/>
            <ComboBox Name="EmployeeComboBox" Margin="0,0,0,10" SelectionChanged="EmployeeComboBox_SelectionChanged">
            </ComboBox>
            <TextBlock Text="Rol:"/>
            <TextBlock x:Name="RoleTextBlock" FontSize="16" Margin="0,10"/>

            <Button Content="Eliminar Empleado" Click="Btn_DeleteEmployee" Margin="0,20,0,10"/>
            <Button Content="Volver al menu principal" Click="Btn_GoBack"/>
        </StackPanel>
    </Grid>
</Page>
