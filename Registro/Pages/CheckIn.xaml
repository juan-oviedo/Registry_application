<Page x:Class="Registro.Pages.CheckIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckIn">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Check In Empleados" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Empleados:"/>
            <ComboBox Name="EmployeeComboBox" Margin="0,0,0,10"/>

            <Button Content="Check In" Click="Btn_CheckIn" Margin="0,20,0,10"/>
            <Button Content="Volver al menu principal" Click="Btn_GoBack"/>
        </StackPanel>
    </Grid>
</Page>
