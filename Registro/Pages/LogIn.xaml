<Page x:Class="Registro.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Iniciar sesión" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Contraseña:"/>
            <PasswordBox Name="PasswordTextBox" Margin="0,0,0,10"/>

            <Button Content="Iniciar sesión" Click="Btn_Login" Margin="0,20,0,10"/>
        </StackPanel>

        <Image Source="pack://application:,,,/Resources/setting.png" 
               Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
               Margin="10" MouseLeftButtonDown="SettingsIcon_Click"/>
    </Grid>
</Page>
